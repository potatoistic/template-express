{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.spec.js",
          "**/*.test.mjs",
          "**/*.spec.mjs",
          "**/*.test.mjs"
        ]
      }
    ]
  },
  "ignorePatterns": ["temp/", "node_modules/", "dist/"]
}
